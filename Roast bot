<body>
  <h1>Roast Bot ðŸ¤–ðŸ”¥</h1>
  <div id="chat"></div>
  <div id="input-area">
    <input id="userInput" type="text" placeholder="Say something..." autocomplete="off" />
    <button id="sendBtn">Roast!</button>
  </div>

  <script>
    const chat = document.getElementById('chat');
    const userInput = document.getElementById('userInput');
    const sendBtn = document.getElementById('sendBtn');

    const roasts = [
      "You're like a cloud. When you disappear, it's a beautiful day.",
      "If I wanted to kill myself, Iâ€™d climb your ego and jump to your IQ.",
      "You're as useless as the 'ueue' in 'queue'.",
      "You bring everyone so much joyâ€¦ when you leave the room.",
      "You have something on your chinâ€¦ no, the third one down.",
      "You're the reason the gene pool needs a lifeguard.",
      "Youâ€™re like a software update. Whenever I see you, I think, 'Not now.'",
      "Youâ€™re as bright as a black hole.",
      "Iâ€™d explain it to you but I left my English-to-Dingbat dictionary at home.",
      "You have the perfect face for radio."
    ];

    function addMessage(text, sender) {
      const msg = document.createElement('div');
      msg.textContent = text;
      msg.classList.add('message', sender);
      chat.appendChild(msg);
      chat.scrollTop = chat.scrollHeight;
    }

    function getRandomRoast() {
      return roasts[Math.floor(Math.random() * roasts.length)];
    }

    function handleSend() {
      const userText = userInput.value.trim();
      if (!userText) return;
      addMessage(userText, 'user');
      userInput.value = '';
      setTimeout(() => {
        addMessage(getRandomRoast(), 'bot');
      }, 800);
    }

    sendBtn.addEventListener('click', handleSend);
    userInput.addEventListener('keydown', e => {
      if (e.key === 'Enter') {
        handleSend();
      }
    });
  </script>
</body>
